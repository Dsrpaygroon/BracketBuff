
<div class="flex-row">
    <p class="w-full text-white text-center text-6xl">Standings</p>
    <table class="text-2xl text-center select-none table-fixed overflow-hidden">
        <tbody>
            @for (int i = 1; i <= 10; i++) {
                <tr class="even:bg-white odd:bg-grey hover:bg-tertiary hover:mouse cursor-pointer">
                    <td class="text-6xl border w-16 m-1">@i</td>
                    <td class="border"><img class="w-16 m-1 border" src="Images/StatsLogo2.png"></td>
                    <td class="border px-3 w-96">Testing</td>
                    <td class="text-4xl border px-3 w-24">3-2</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@code {
    [Parameter] public List<String> Teams { get; set; }
}