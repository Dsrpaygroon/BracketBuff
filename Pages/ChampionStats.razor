@page "/champion_stats"
<page class="grid px-8 my-4">

    <div class="flex-col justify-between w-80">
        <button class="w-52 h-12 bg-white border-2 rounded">Dropdown 1</button>
        <button class="w-52 h-12 bg-white border-2 rounded my-2">Dropdown 2</button>
        <div class="flex-row">
            <button class="w-12 h-12 bg-white border-2 my-2"></button>
            <p>Game Threshold</p>
        </div>
    </div>
    <GraphTemplate StatValues="statValues" StatNames="statNames"/>

</page>

@code {
    private List<String> statNames = new List<String>();
    private List<List<String>> statValues = new List<List<String>>();

    public void AddStats(){
        for (int i = 0; i < 100; i++) {
            statNames.Add(i.ToString());
            List<String> temp = new List<String>();
            for (int j = 0; j < 100; j++) {
                temp.Add(j.ToString());
            }
            statValues.Add(temp);
        }
    }

    protected override async Task OnInitializedAsync() {
        AddStats();
    }
}
